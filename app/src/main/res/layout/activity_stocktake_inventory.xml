<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_global"
        tools:context=".StocktakeInventoryActivity">

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Type*"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:background="@drawable/spinner_border"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sn_stocktake_type"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="Search Shelf"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Product Id*"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:background="@drawable/spinner_border"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sn_product_id"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="Search Shelf"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Quantity"/>

        <TextView
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:id="@+id/tv_product_quantity"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10px"
            android:gravity="center"
            android:weightSum="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:text="Scan"
                android:id="@+id/btn_scan_box_rfid"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_scanned_product"
                android:gravity="center"
                android:textSize="300px"
                android:text="0"
                android:layout_weight="6"
                android:layout_width="0px"
                android:layout_height="400px"/>



        <!--<TextView-->
        <!--android:textStyle="bold"-->
        <!--android:gravity="center"-->
        <!--android:layout_weight="3"-->
        <!--android:layout_width="0px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="Scanned"/>-->

        <!--<TextView-->
        <!--android:background="@drawable/rectangle_border"-->
        <!--android:gravity="center"-->
        <!--android:id="@+id/tv_scanned_product"-->
        <!--android:layout_weight="7"-->
        <!--android:layout_width="0px"-->
        <!--android:layout_height="match_parent"/>-->

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field"
            android:layout_margin="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="9">

        <Button
                android:id="@+id/btn_save"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Save"/>

        <Button
                android:id="@+id/btn_clear"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Clear"/>

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Cancel"/>

    </LinearLayout>


</LinearLayout>