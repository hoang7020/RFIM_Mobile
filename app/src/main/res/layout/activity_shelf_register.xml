<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ShelfRegisterActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10px"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Shelf ID:"/>

        <TextView
            android:id="@+id/txt_shelf_id"
            android:layout_weight="5"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_get_shelf_id"
            android:layout_weight="2"
            android:text="GET"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10px"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_weight="3"
            android:text="Shelf Name:"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="7"
            android:text="Shelf name will be display here"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10px"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_weight="3"
            android:text="Description:"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="7"
            android:text="Description will be display here"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10px"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Shelf RFID:"/>

        <TextView
            android:id="@+id/txt_shelf_rfid"
            android:layout_weight="5"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_scan_shelf_rfid"
            android:layout_weight="2"
            android:text="Scan"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10px"
        android:weightSum="9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <Button
            android:text="Save"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <Button
            android:text="Clear"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <Button
            android:text="Cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

    </LinearLayout>

</LinearLayout>