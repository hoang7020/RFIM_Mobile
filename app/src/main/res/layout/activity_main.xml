<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
            style="@style/OverflowMenu"
            app:title="Main Menu"
            app:titleTextColor="@color/smsp_white_color"
            android:background="@color/colorPrimary"
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/sign"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button_main_menu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_radius">


                <LinearLayout
                        android:id="@+id/btn_package_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_button_main_menu"
                        android:background="@drawable/ripple_effect"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:padding="20dp"
                            android:src="@drawable/packages"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Register Package &amp; Box"
                                android:textSize="@dimen/menu_font_size_title"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textSize="@dimen/menu_font_size_description"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button_main_menu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_radius">

                <LinearLayout
                        android:id="@+id/btn_stock_in_package"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_button_main_menu"
                        android:background="@drawable/ripple_effect"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:padding="20dp"
                            android:src="@drawable/stockin"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Stock In"
                                android:textSize="@dimen/menu_font_size_title"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Goods Receipt"
                                android:textSize="@dimen/menu_font_size_description"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button_main_menu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_radius">

                <LinearLayout
                        android:id="@+id/btn_stock_out_package"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_button_main_menu"
                        android:background="@drawable/ripple_effect"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:padding="20dp"
                            android:src="@drawable/stockin"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Stock Out"
                                android:textSize="@dimen/menu_font_size_title"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Goods Issue"
                                android:textSize="@dimen/menu_font_size_description"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button_main_menu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_radius">

                <LinearLayout
                        android:id="@+id/btn_transfer_product"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_button_main_menu"
                        android:background="@drawable/ripple_effect"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:padding="20dp"
                            android:src="@drawable/transfer"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Transfer Product"
                                android:textSize="@dimen/menu_font_size_title"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button_main_menu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_radius">

                <LinearLayout
                        android:id="@+id/btn_stocktake_inventory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_button_main_menu"
                        android:background="@drawable/ripple_effect"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:padding="20dp"
                            android:src="@drawable/stocktake"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Stocktake Inventory"
                                android:textSize="@dimen/menu_font_size_title"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

