            <!--android:id="@+id/tv_product_position"-->
            <!--android:textSize="15sp"-->
            <!--android:text="Pos"-->
            <!--android:layout_weight="2"-->
            <!--android:layout_width="0px"-->
            <!--android:layout_height="wrap_content"/>-->

</LinearLayout>