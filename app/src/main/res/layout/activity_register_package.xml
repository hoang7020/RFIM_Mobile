<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="10dp"
              tools:context=".RegisterPackageActivity">

    <LinearLayout
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Receipt*"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:background="@drawable/spinner_border"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sn_receipt"
                android:layout_weight="5.5"
                android:layout_width="0px"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="Search Shelf"
                android:layout_height="match_parent"/>

        <ImageButton
                android:scaleType="centerInside"
                android:src="@drawable/info"
                android:layout_weight="1.5"
                android:id="@+id/btn_receipt"
                android:layout_width="0px"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Product Id*"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:background="@drawable/spinner_border"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sn_product_id"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="Search Shelf"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Product Name:"/>

        <TextView
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:id="@+id/txt_product_name"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Description:"/>

        <TextView
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:id="@+id/txt_product_description"
                android:layout_weight="7"
                android:layout_width="0px"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Package RFID*"/>

        <TextView
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:id="@+id/txt_package_rfid"
                android:layout_weight="5"
                android:layout_width="0px"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/btn_scan_shelf_rfid"
                android:layout_weight="2"
                android:text="Scan"
                android:layout_width="0px"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_margin="10px"
            android:background="@drawable/rectangle_border"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_scan_box_field">

        <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="Box RFID*"/>

        <ScrollView
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="0px"
                android:layout_height="match_parent">

            <TextView
                    android:gravity="center"
                    android:id="@+id/txt_box_rfid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </ScrollView>
        <Button
                android:gravity="center"
                android:layout_weight="2"
                android:id="@+id/btn_scan_product_rfid"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Scan"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_field"
            android:layout_margin="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="9">

        <Button
                android:id="@+id/btn_save"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Save"/>

        <Button
                android:id="@+id/btn_clear"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Clear"/>

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>